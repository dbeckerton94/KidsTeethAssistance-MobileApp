<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mobileassignment2.teeth_wars.MainActivity"
    android:background="@drawable/cartoonbg">

    <Button
        android:layout_width="299dp"
        android:layout_height="76dp"
        android:text="Login"
        android:id="@+id/button"
        android:layout_x="16dp"
        android:layout_y="455dp"
        android:onClick="onButtonClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Username:"
        android:id="@+id/textView6"
        android:layout_x="0dp"
        android:layout_y="225dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Password:"
        android:id="@+id/textView7"
        android:layout_x="0dp"
        android:layout_y="274dp"
        android:textColor="#000000" />

    <EditText
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText4"
        android:layout_x="90dp"
        android:layout_y="226dp"
        android:background="@drawable/rect_text_edit" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText5"
        android:layout_x="90dp"
        android:layout_y="274dp"
        android:background="@drawable/rect_text_edit" />

    <ImageView
        android:layout_width="166dp"
        android:layout_height="166dp"
        android:id="@+id/imageView2"
        android:layout_x="76dp"
        android:layout_y="0dp"
        android:background="@drawable/toothp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Login Screen"
        android:id="@+id/textView8"
        android:layout_x="98dp"
        android:layout_y="181dp"
        android:textColor="#000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:id="@+id/button3"
        android:layout_x="120dp"
        android:layout_y="399dp"
        android:onClick="onButtonClick" />

</AbsoluteLayout>
