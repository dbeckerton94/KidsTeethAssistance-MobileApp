<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.example.mobileassignment2.teeth_wars.Brushing"
    android:background="@drawable/backgroundhills">

    <ProgressBar

        android:id="@+id/circularProgressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="610dp"
        android:layout_height="610dp"
        android:indeterminate="false"
        android:max="100"
        android:progress="0"
        android:layout_centerInParent="true"
        android:progressDrawable="@drawable/circular"
        android:secondaryProgress="100"
        android:layout_x="-128dp"
        android:layout_y="-100dp"
        android:background="#007836d5" />


    <ImageView
        android:layout_width="214dp"
        android:layout_height="214dp"
        android:background="@drawable/bobw"
        android:layout_centerInParent="true"
        android:layout_x="70dp"
        android:layout_y="98dp"
        android:id="@+id/image" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="250dp"
        android:layout_height="64dp"
        android:gravity="center"
        android:text="Seconds remaining: 0"
        android:progress="0"
        android:max="100"
        android:layout_centerInParent="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:layout_x="55dp"
        android:layout_y="13dp" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageButton"
        android:layout_x="270dp"
        android:layout_y="456dp"
        android:background="@drawable/clockround"
        android:onClick="onBrushteeth" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageButton2"
        android:layout_x="4dp"
        android:layout_y="456dp"
        android:background="@drawable/home1"
        android:onClick="onBrushteeth" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageButton3"
        android:layout_x="92dp"
        android:layout_y="456dp"
        android:background="@drawable/store2"
        android:onClick="onBrushteeth" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageButton4"
        android:layout_x="182dp"
        android:layout_y="456dp"
        android:background="@drawable/profile3"
        android:onClick="onBrushteeth" />

    <Button
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:text="START"
        android:id="@+id/startbutton"
        android:layout_x="111dp"
        android:layout_y="360dp"
        android:nestedScrollingEnabled="false"
        android:onClick="onBrushteeth"


        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Coins:"
        android:id="@+id/textView14"
        android:layout_x="249dp"
        android:layout_y="0dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:id="@+id/avatardatabase"
        android:layout_x="312dp"
        android:layout_y="2dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Well Done! Why dont you take a picture of those Pearly Whites?"
        android:id="@+id/welldone"
        android:layout_x="3dp"
        android:layout_y="348dp"
        android:textColor="#000000"
        android:visibility="invisible" />

    <Button
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:text="Take a Photo"
        android:id="@+id/photo"
        android:layout_x="111dp"
        android:layout_y="406dp"
        android:nestedScrollingEnabled="false"
        android:onClick="onBrushteeth"
        android:visibility="invisible" />


</AbsoluteLayout>
